{
    "compilerOptions": {
      "lib": [
        "es6"
      ],
      "target": "es2016",
      "module": "commonjs",
      "rootDir": "./src",
      "resolveJsonModule": true,
      "allowJs": true,
      "outDir": "./build",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "noImplicitAny": true,
      "skipLibCheck": true,
      "experimentalDecorators": true
    }
  }